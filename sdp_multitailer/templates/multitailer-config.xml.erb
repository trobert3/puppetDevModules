<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xmlns:context="http://www.springframework.org/schema/context"
        xmlns:int="http://www.springframework.org/schema/integration"
        xmlns:p="http://www.springframework.org/schema/p"
        xsi:schemaLocation="
                http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-3.2.xsd
                http://www.springframework.org/schema/integration http://www.springframework.org/schema/integration/spring-integration.xsd
                http://www.springframework.org/schema/context http://www.springframework.org/schema/context/spring-context-3.2.xsd
                ">

        <context:property-placeholder properties-ref="embeddedProperties" order="2" />
        <bean id="embeddedProperties"
             class="org.springframework.beans.factory.config.PropertiesFactoryBean">
          <property name="properties">
            <props>
              <prop key="rabbitmq.host"><%= @rabbitmq_host %></prop>
              <prop key="rabbitmq.port"><%= @rabbitmq_port %></prop>
              <prop key="rabbitmq.user"><%= @rabbitmq_user %></prop>
              <prop key="rabbitmq.password"><%= @rabbitmq_password %></prop>
              <prop key="rabbitmq.publisherConfirms"><%= @rabbitmq_publisherConfirms %></prop>
              <prop key="routing.key.expression"><%= @routing_key_expression %></prop>
            </props>
          </property>
        </bean>

